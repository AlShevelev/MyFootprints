<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_boost"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:background="@color/photo_edit_filterBackgroundColor"
    android:clickable="true"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:padding="@dimen/photo_edit_filters_controls_padding"
    android:visibility="gone"
    tools:ignore="Overdraw,UnusedAttribute" >

    <com.syleiman.myfootprints.presentationLayer.activities.photoEditor.controls.VerticalSeekBar
        android:id="@+id/boost_value"
        style="@style/SeekBarAppThemeColorize"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:max="150"
        android:mirrorForRtl="false"
        android:progress="100"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/photo_edit_filters_controls_padding" >

        <Button
            android:id="@+id/boost_red"
            style="@style/ButtonAppThemeColorize"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:tag="1"
            android:text="@string/photo_edit_redL"
            android:textSize="@dimen/photo_edit_filters_controls_label_font"
            android:typeface="monospace" />

        <Button
            android:id="@+id/boost_green"
            style="@style/ButtonAppThemeColorize"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:tag="2"
            android:text="@string/photo_edit_greenL"
            android:textSize="@dimen/photo_edit_filters_controls_label_font"
            android:typeface="monospace" />

        <Button
            android:id="@+id/boost_blue"
            style="@style/ButtonAppThemeColorize"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:tag="3"
            android:text="@string/photo_edit_blueL"
            android:textSize="@dimen/photo_edit_filters_controls_label_font"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>